<Window x:Class="Randomize.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Randomize"
        mc:Ignorable="d"
        Title="DeviceID Randomizer" Height="105" Width="475" MinHeight="105" MinWidth="475">
    <Grid Background="#FF212121">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Button Grid.Column="2" Grid.Row="0" x:Name="Button" Content="Randomize" Margin="0,10,17,7" Click="Button_Click" Background="#FF212121" Foreground="White" FontSize="10" Grid.RowSpan="5" />
        <Button Grid.Column="2" Grid.Row="4" x:Name="Clear" Content="Clear"  Click="Clear1" Margin="0,6,17,0" Grid.RowSpan="2" Background="#FF212121" Foreground="White" FontSize="10" />
        <TextBox x:Name="Txt" Margin="10,18,36,3" Background="#FF323131" Foreground="White" Grid.Column="9" Grid.RowSpan="6"  />

    </Grid>
</Window>
